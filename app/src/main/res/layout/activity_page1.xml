<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="Page1.Page1"
    android:id="@+id/nestScrollView_page1"
    tools:showIn="@layout/activity_page1_scrolling"
    android:background="@drawable/ic_bg_photospot"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">



        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp">


        // 메인 타이틀
        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gothic_bold"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="10dp"
            android:text="나만의 여행을\n계획해보세요"
            android:textColor="#000000"
            android:textScaleX="0.98"
            android:textSize="24dp"/>

        // 여행 스케줄 확인하러가기
        <RelativeLayout
            android:id="@+id/gotoschedule_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_title"
            android:background="@drawable/ic_box01"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            android:elevation="5dp"
            android:padding="16dp"
            android:clickable="true">

            // 기차 이미지
            <ImageView
                android:id="@+id/train_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_train"
                android:layout_centerVertical="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/train_image"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true">

                // 여행 스케줄 확인하러가기
                <TextView
                    android:id="@+id/schedule_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="여행 스케줄 확인하러 가기!"
                    android:textSize="11sp"
                    android:textColor="#FFFFFF"
                    android:letterSpacing="-0.03"
                    android:fontFamily="@font/gothic_medium"
                    android:layout_marginBottom="5dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/schedule_text"
                    android:background="@drawable/ic_box02"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/text_mytrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="내 여행"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:fontFamily="@font/gothic_bold"/>

                    <TextView
                        android:id="@+id/text_dday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/text_mytrip"
                        android:text="D-14"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:fontFamily="@font/gothic_bold"
                        android:layout_marginLeft="5dp"/>
                    
                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="14dp"
                        android:background="@drawable/page1_right_btn"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
           </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/page1_button_layout"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_below="@+id/gotoschedule_layout"
            android:layout_marginTop="32dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:background="@drawable/box_white_rad8"
                android:elevation="3dp">

                // 스케쥴짜기 버튼

                <ImageButton
                    android:id="@+id/main_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_main1" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/box_white_rad8"
                android:elevation="3dp">

                // 일정등록 버튼

                <ImageButton
                    android:id="@+id/main_register"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_main2"
                    android:elevation="3dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="@drawable/box_white_rad8"
                android:elevation="3dp">
                // 찜한 관광지 버튼

                <ImageButton
                    android:id="@+id/main_spot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ic_main3"
                    android:elevation="3dp" />
            </FrameLayout>
        </RelativeLayout>

        // 안내 멘트
        <TextView
            android:id="@+id/main_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/page1_button_layout"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/gothic_medium"
            android:letterSpacing="-0.03"
            android:text="당신을 위한 여행 코스를 확인해보세요"
            android:textColor="#000000"
            android:textScaleX="0.98"
            android:textSize="18dp" />

        // 코스 레이아웃
            <LinearLayout
                android:id="@+id/course_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_subtitle"
                android:layout_marginTop="16dp"
                android:clipToPadding="false"
                android:elevation="3dp"
                android:orientation="vertical"
                android:padding="4dp">
                <LinearLayout
                    android:id="@+id/course_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:clipToPadding="false"
                    android:elevation="3dp"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

            </LinearLayout>

                <LinearLayout
                    android:id="@+id/course_layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:clipToPadding="false"
                    android:elevation="3dp"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">
                </LinearLayout>
        </LinearLayout>

        // 안내 멘트2
            <TextView
                android:id="@+id/main_subtitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/course_layout"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/gothic_medium"
                android:letterSpacing="-0.03"
                android:text="이런 곳은 어떠신가요?"
                android:textColor="#000000"
                android:textScaleX="0.98"
                android:textSize="18dp" />

        // 관광지 스크롤 뷰
            <HorizontalScrollView
                android:id="@+id/spot_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_subtitle2"
                android:layout_marginTop="16dp"
                android:scrollbars="none">


                // 뷰 동적 생성
                <LinearLayout
                    android:id="@+id/main_city_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:orientation="horizontal">

                </LinearLayout>
        </HorizontalScrollView>

        // 내일로 안내 스크롤뷰
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_below="@+id/spot_layout"
                android:layout_marginTop="32dp"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:paddingLeft="16dp">

                    <RelativeLayout
                        android:id="@+id/info1"
                        android:layout_width="264dp"
                        android:layout_height="192dp"
                        android:background="@drawable/box_white_rad20"
                        android:layout_marginRight="30dp"
                        android:elevation="3dp"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/info_title1_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/gothic_medium"
                            android:letterSpacing="-0.04"
                            android:text="[내일로 이용 대상]"
                            android:textColor="#4F4F4F"
                            android:textScaleX="0.98"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/info_sub1_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/info_title1_1"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/gothic_light"
                            android:letterSpacing="-0.08"
                            android:text="-전 국민 누구나"
                            android:textColor="#000000"
                            android:textScaleX="0.98"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/info_title1_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/info_sub1_1"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/gothic_medium"
                            android:letterSpacing="-0.04"
                            android:text="[내일로 구매 기간]"
                            android:textColor="#4F4F4F"
                            android:textScaleX="0.98"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/info_sub1_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/info_title1_2"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/gothic_light"
                            android:letterSpacing="-0.04"
                            android:text="-이용시작일 기준 7일전부터 구매 가능"
                            android:textColor="#000000"
                            android:textScaleX="0.98"
                            android:textSize="13dp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/info2"
                        android:layout_width="264dp"
                        android:layout_height="192dp"
                        android:background="@drawable/box_white_rad20"
                        android:layout_toRightOf="@+id/info1"
                        android:layout_marginRight="30dp"
                        android:elevation="3dp"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/info_title2_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/gothic_medium"
                            android:letterSpacing="-0.04"
                            android:text="[내일로 이용 열차]"
                            android:textColor="#4F4F4F"
                            android:textScaleX="0.98"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/info_sub2_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/info_title2_1"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/gothic_light"
                            android:letterSpacing="-0.08"
                            android:text="-KTX의 좌석, 일반열차(ITX-청춘, ITX-새마을, 새마을, 무궁화, 누리로, 통근열차)의 좌석·입석"
                            android:textColor="#000000"
                            android:textScaleX="0.98"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/info_sub2_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/info_sub2_1"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/gothic_light"
                            android:letterSpacing="-0.08"
                            android:text="-코로나19 종료까지 일반열차의 입석 이용 불가"
                            android:textColor="#000000"
                            android:textScaleX="0.98"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/info_sub2_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/info_sub2_2"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/gothic_light"
                            android:letterSpacing="-0.08"
                            android:text="-입석 이용 제한으로 좌석 매진 시 해당 열차 이용이 불가능하니 미리 구매 바람"
                            android:textColor="#000000"
                            android:textScaleX="0.98"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/info3"
                        android:layout_width="264dp"
                        android:layout_height="192dp"
                        android:background="@drawable/box_white_rad20"
                        android:layout_toRightOf="@+id/info2"
                        android:layout_marginRight="30dp"
                        android:elevation="3dp"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/info_title3_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/gothic_medium"
                            android:letterSpacing="-0.04"
                            android:text="[내일로 이용 기간]"
                            android:textColor="#4F4F4F"
                            android:textScaleX="0.98"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/info_sub3_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/info_title3_1"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/gothic_light"
                            android:letterSpacing="-0.08"
                            android:text="-연중운영으로 이용 기간이 확대"
                            android:textColor="#000000"
                            android:textScaleX="0.98"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/info_sub3_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/info_sub3_1"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/gothic_light"
                            android:letterSpacing="-0.08"
                            android:text="-유효기간내에 3일을 직접 선택하여 패스를 사용하는 '선택 3일권' 신설"
                            android:textColor="#000000"
                            android:textScaleX="0.98"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/info_sub3_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/info_sub3_2"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/gothic_light"
                            android:letterSpacing="-0.08"
                            android:text="-단, 한국철도가 지정한 명절 대수송기간 이용 불가"
                            android:textColor="#000000"
                            android:textScaleX="0.98"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/info_sub3_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/info_sub3_3"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/gothic_light"
                            android:letterSpacing="-0.08"
                            android:text="-'만 25세이하 권종'은 하계, 동계만 운영하나, 개별 관광 활성화를 위해 2020년 한하여 연중운영"
                            android:textColor="#000000"
                            android:textScaleX="0.98"
                            android:textSize="12dp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/info4"
                        android:layout_width="264dp"
                        android:layout_height="192dp"
                        android:layout_marginRight="16dp"
                        android:layout_toRightOf="@+id/info3"
                        android:background="@drawable/box_white_rad20"
                        android:elevation="3dp"
                        android:padding="16dp">

                        // 내일로 이용 가격

                        <TextView
                            android:id="@+id/info_title4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="6dp"
                            android:elevation="10dp"
                            android:fontFamily="@font/gothic_medium"
                            android:letterSpacing="-0.04"
                            android:text="[내일로 이용 가격]"
                            android:textColor="#4F4F4F"
                            android:textScaleX="0.98"
                            android:textSize="16dp"
                            android:textStyle="bold" />


                        // 가격표
                        <TableLayout
                            android:id="@+id/table_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/info_title4"
                            android:layout_marginTop="8dp"
                            android:background="#AAAAAA"
                            android:stretchColumns="*">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp" />

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:background="#FFFFFF"
                                    android:fontFamily="@font/gothic_light"
                                    android:gravity="center"
                                    android:letterSpacing="-0.04"
                                    android:padding="3dp"
                                    android:text="0인"
                                    android:textColor="#FFFFFF"
                                    android:textScaleX="0.98"
                                    android:textSize="11dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:background="#FFFFFF"
                                    android:fontFamily="@font/gothic_light"
                                    android:gravity="center"
                                    android:letterSpacing="-0.04"
                                    android:padding="3dp"
                                    android:text="선택 3일권"
                                    android:textColor="#000000"
                                    android:textScaleX="0.98"
                                    android:textSize="11dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:background="#FFFFFF"
                                    android:fontFamily="@font/gothic_light"
                                    android:gravity="center"
                                    android:letterSpacing="-0.04"
                                    android:padding="3dp"
                                    android:text="연속 7일권"
                                    android:textColor="#000000"
                                    android:textScaleX="0.98"
                                    android:textSize="11dp"
                                    android:textStyle="bold" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:background="#FFFFFF"
                                    android:fontFamily="@font/gothic_light"
                                    android:gravity="center"
                                    android:letterSpacing="-0.04"
                                    android:padding="3dp"
                                    android:text="어른"
                                    android:textColor="#000000"
                                    android:textScaleX="0.98"
                                    android:textSize="11dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:background="#FFFFFF"
                                    android:fontFamily="@font/gothic_light"
                                    android:gravity="center"
                                    android:letterSpacing="-0.04"
                                    android:padding="3dp"
                                    android:text="10만원"
                                    android:textColor="#000000"
                                    android:textScaleX="0.98"
                                    android:textSize="11dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:background="#FFFFFF"
                                    android:fontFamily="@font/gothic_light"
                                    android:gravity="center"
                                    android:letterSpacing="-0.04"
                                    android:padding="3dp"
                                    android:text="11만원"
                                    android:textColor="#000000"
                                    android:textScaleX="0.98"
                                    android:textSize="11dp"
                                    android:textStyle="bold" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:background="#FFFFFF"
                                    android:fontFamily="@font/gothic_light"
                                    android:gravity="center"
                                    android:letterSpacing="-0.04"
                                    android:padding="3dp"
                                    android:text="만25세이하"
                                    android:textColor="#000000"
                                    android:textScaleX="0.98"
                                    android:textSize="11dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginBottom="1dp"
